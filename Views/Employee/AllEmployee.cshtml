@model IEnumerable<Dropbox05.Models.Employee>
<p><a asp-controller="Employee" asp-action="AddEmployee">
    Add an Employee</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No Employee Yet</p>
    }
    else
    {
        <h3>All Employees</h3>
        <table border="1">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Hourly Wage</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            @{
                foreach (var employee in Model)
                {
                        <tr>
                            <td>@employee.EmployeeId</td>
                            <td>@employee.EmployeeName</td>
                            <td>@employee.HourlyWage</td>
                            <td><a asp-action="EditEmployee" asp-route-id="@employee.EmployeeId">Edit</a></td>
                            <td><a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId">Delete</a></td>
                        </tr>
                }
            }
        </table>
    }
}
